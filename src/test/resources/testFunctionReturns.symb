function testif accepts doit
    if doit
        return zero
    fi
    return one
end

println testif true sep
println testif false sep

function testwhile accepts doit
    while doit do
        return zero
    done
    return one
end

println testwhile true sep
println testwhile false sep

function testforeach accepts doit
    foreach item in doit do
        return zero
    done
    return one
end

println testforeach list open one close sep

function testfor accepts doit
    for variable x is zero while x lessthan doit with variable x is x plus one do
        return one
    done
    return zero
end

println testfor zero
println testfor one